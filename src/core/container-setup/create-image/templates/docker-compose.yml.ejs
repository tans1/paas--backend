version: "3.8"

services:
  <%=projectName %>:
    image: <%=imageName %>
    build:
      context: .
      dockerfile: <%=dockerFile %>
    container_name: <%=containerName %>
    labels:
      - "traefik.enable=true"
      - "traefik.http.routers.<%= projectName %>.rule=Host(`<%= deploymentUrl %>`)"
      - "traefik.http.routers.<%= projectName %>.entrypoints=web"
      - "traefik.http.services.<%= projectName %>.loadbalancer.server.port=<%=PORT %>"
    volumes:
      - node_modules:/usr/src/app/node_modules
    networks:
      - traefik-public
<% if (includeEnvFile) { %>
    env_file:
      - <%= envFileName %>
<% } %>


volumes:
  node_modules:

networks:
  traefik-public:
    external: true
