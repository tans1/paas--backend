version: "3.8"

services:
  <%=projectName %>:
    image: <%=imageName %>
    build:
      context: .
      dockerfile: <%=dockerFile %>
    container_name: <%=containerName %>
    labels:
      - 'traefik.enable=true'
      - 'traefik.http.routers.<%= projectName %>.rule=(Host(`<%= deploymentUrl %>`) || Host(`www.<%= deploymentUrl %>`))'
      - 'traefik.http.routers.<%= projectName %>.entrypoints=websecure'
      - 'traefik.http.routers.<%= projectName %>.tls=true'
      - 'traefik.http.routers.<%= projectName %>.tls.certresolver=cloudflare'
      - 'traefik.http.routers.<%= projectName %>.tls.domains[0].main=<%= deploymentUrl %>'
      - 'traefik.http.routers.<%= projectName %>.tls.domains[0].sans=www.<%= deploymentUrl %>'
      #- 'traefik.http.services.<%= projectName %>.loadbalancer.server.port=4173' #TODO: use PORT variable here

      - 'traefik.http.middlewares.rewrite-host.headers.customRequestHeaders.Host=localhost'
      - 'traefik.http.routers.<%= projectName %>.middlewares=rewrite-host'


    volumes:
      - node_modules:/usr/src/app/node_modules
    networks:
      - traefik-public
<% if (includeEnvFile) { %>
    env_file:
      - <%= envFileName %>
<% } %>


volumes:
  node_modules:

networks:
  traefik-public:
    external: true


