# Next.js Static Dockerfile
FROM node:<%= nodeVersion %>-alpine AS builder

WORKDIR /app
COPY package*.json ./
RUN <%= installCommand %>
COPY . .
RUN <%= buildCommand %>

FROM nginx:stable-alpine
COPY --from=builder /app/<%= staticFolder %> /usr/share/nginx/html
# COPY --from=builder /app/public/static /usr/share/nginx/html/static

EXPOSE <%= port %>
CMD ["nginx", "-g", "daemon off;"]