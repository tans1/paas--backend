{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Nest (ts-node)",
      "type": "node",
      "request": "launch",
      "protocol": "inspector",
      "cwd": "${workspaceFolder}",
      "args": ["${workspaceFolder}/src/main.ts"],
      "runtimeArgs": [
        "--nolazy",
        "-r",
        "ts-node/register",
        "-r",
        "tsconfig-paths/register"
      ],
      "sourceMaps": true,
      "smartStep": true,
      "console": "integratedTerminal"
    },
    {
      "name": "Debug Nest with nodemon",
      "type": "node",
      "request": "launch",
      "protocol": "inspector",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "npx",
      "runtimeArgs": [
        "nodemon",
        "--config",
        "nodemon.json",
        "--exec",
        "node --nolazy -r ts-node/register -r tsconfig-paths/register --inspect=0",
        "${workspaceFolder}/src/main.ts"
      ],
      "restart": true,
      "autoAttachChildProcesses": true,
      "console": "integratedTerminal",
      "sourceMaps": true,
      "smartStep": true,
      "skipFiles": ["<node_internals>/**"]
    }
  ]
}
