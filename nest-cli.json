{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
    {
      "include": "**/*.ejs",
      "watchAssets": true ,
      "outDir": "dist"
    },
    {
      "include": "**/*.hbs",
      "watchAssets": true ,
      "outDir": "dist"
    },
    {
      "include": "**/*.dockerignore",
      "watchAssets": true,
      "outDir": "dist"
    }
  ]
  }
  
}

