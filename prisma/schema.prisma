enum ProjectStatus {
  STOPPED
  RUNNING
  PENDING 
}

model Project {
  id             Int      @id @default(autoincrement())
  repoId         Int      @map("repo_id")
  branch         String   @db.VarChar(100)
  name           String   @db.VarChar(255)
  url            String   @db.VarChar(2083)
  framework      String   @db.VarChar(100)
  linkedByUser   User     @relation("UserProjects", fields: [linkedByUserId], references: [id])
  linkedByUserId Int
  createdAt      DateTime @default(now()) @map("created_at")
  environmentVariables  Json?        @map("environment_variables")
  deployedIp String? @map("deployed_ip")
  deployedPort Int? @map("deployed_port")
  deployedUrl String? @map("deployedUrl")

  deployments Deployment[]

  localRepoPath String? @map("local_repo_path")

  zoneId String? @map("zone_id")
  aRecordId String? @map("a_name_record_id")
  cnameRecordId String? @map("cname_record_id")
  installCommand String?   @db.VarChar(2083)
  buildCommand String?   @db.VarChar(2083)
  outputDirectory String?   @db.VarChar(2083)
  rootDirectory String?   @db.VarChar(2083)
  projectDescription String? @db.VarChar(2083)
  lastCommitMessage String  @db.VarChar(2083)
  status ProjectStatus  @default(PENDING)
  dockerComposeFile String? @db.VarChar(2083)

  @@unique([repoId, branch], name: "repoId_branch")
}

// imageName
// containerName
model Deployment {
  id                    Int          @id @default(autoincrement())
  project                  Project      @relation(fields: [projectId], references: [id], onDelete: Cascade)
  projectId                Int
  status                String       @db.VarChar(50)
  branch                String       @db.VarChar(100)
  environmentVariables  Json?        @map("environment_variables")
  rollbackTo            Deployment?  @relation("Rollback", fields: [rollbackToId], references: [id])
  rollbackToId          Int?         @map("rollback_to_id")
  rollbackedDeployments Deployment[] @relation("Rollback")
  containerName       String?      @map("container_name")
  imageName           String?      @map("image_name")
  createdAt DateTime        @default(now()) @map("created_at")
  lastCommitMessage String @db.VarChar(2083)
  logs      DeploymentLog[]
}

model DeploymentLog {
  id           Int        @id @default(autoincrement())
  deployment   Deployment @relation(fields: [deploymentId], references: [id], onDelete: Cascade)
  deploymentId Int
  logLevel     String     @map("log_level") @db.VarChar(20)
  message      String
  timestamp    DateTime   @default(now()) @map("timestamp")
  logType   String @map("log_type") @db.VarChar(20)
}

model Payment {
  id            Int      @id @default(autoincrement())
  user          User     @relation(fields: [userId], references: [id])
  userId        Int
  amount        Decimal  @db.Decimal(10, 2)
  method        String   @db.VarChar(50)
  status        String   @db.VarChar(50)
  transactionId String   @unique @map("transaction_id") @db.VarChar(255)
  createdAt     DateTime @default(now()) @map("created_at")
}

model Server {
  id                 Int      @id @default(autoincrement())
  resourceUsage      Json?    @map("resource_usage")
  hostedApplications Json?    @map("hosted_applications")
  createdAt          DateTime @default(now()) @map("created_at")
}

model UserAlert {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  message   String
  type      String   @db.VarChar(50)
  createdAt DateTime @default(now()) @map("created_at")
}

model AdminAnalytics {
  id        Int      @id @default(autoincrement())
  metric    String   @db.VarChar(100)
  value     Json?
  createdAt DateTime @default(now()) @map("created_at")
}

model OAuthProvider {
  id          Int      @id @default(autoincrement())
  user        User     @relation(fields: [userId], references: [id])
  userId      Int
  provider    String?  @db.VarChar(50)
  accessToken String   @map("access_token") @db.VarChar(255)
  createdAt   DateTime @default(now()) @map("created_at")
}
